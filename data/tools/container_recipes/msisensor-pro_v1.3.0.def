Bootstrap: docker
From: ubuntu:24.04

%post
LANG=C.UTF-8
LC_ALL=C.UTF-8

# Update ubuntu packages and install build dependencies
apt-get update
apt-get install -y \
	wget \
	build-essential \
	make \
	zlib1g-dev \
    libbz2-dev \
    liblzma-dev \
    libcurl4-openssl-dev \
    libssl-dev \
	libgomp1

# Install HTSlib (needed for msisensor-pro)
cd /opt
mkdir -p htslib-install
wget https://github.com/samtools/htslib/releases/download/1.17/htslib-1.17.tar.bz2
tar -xvf htslib-1.17.tar.bz2
cd htslib-1.17
make
make install
cd /opt
rm -rf htslib-1.17
rm htslib-1.17.tar.bz2

# Download msisensor-pro
mkdir -p "msisensor-pro-1.3.0/"
cd "msisensor-pro-1.3.0/"
wget https://github.com/xjtu-omics/msisensor-pro/releases/download/v1.3.0/msisensor-pro-v1.3.0
chmod +x msisensor-pro-v1.3.0

# Cleanup build dependencies
cd /
apt-get remove -y \
	wget \
	build-essential \
	make \
	zlib1g-dev \
    libbz2-dev \
    liblzma-dev \
    libssl-dev
apt-get autoremove -y && \
apt-get clean && \
rm -rf /var/lib/apt/lists/*

%environment
export LANG=C.UTF-8
export LC_ALL=C.UTF-8
export PATH=/opt/msisensor-pro-1.3.0:/opt/htslib-install:$PATH
export LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH