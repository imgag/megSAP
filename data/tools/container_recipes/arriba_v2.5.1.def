Bootstrap: docker
From: ubuntu:24.04

%labels
    Maintainer KilianIlius
    Version arriba_v2.5.1

%post
	LANG=C.UTF-8
	LC_ALL=C.UTF-8

	# Update package list and install build dependencies
	apt-get update --fix-missing 
	apt-get upgrade -y
	apt-get install -y \
		wget \
		make \
		git \
		samtools \
		build-essential \
		gfortran \
		libgomp1 \
		libgfortran5 \
		libreadline-dev \
		libpcre2-dev \
		libbz2-dev \
		liblzma-dev \
		libcurl4-openssl-dev \
		libxml2-dev \
		libx11-dev \
		libxt-dev \
		libjpeg-dev \
		libpng-dev \
		libtiff-dev \
		libcairo2-dev \
		libicu-dev \
		autotools-dev \
		automake \
		libtool \
		libharfbuzz-dev \
		libfribidi-dev
	
	# Install and build curl
	mkdir -p /curl_tmp && cd /curl_tmp
	wget https://curl.haxx.se/download/curl-7.78.0.tar.gz
	tar -xvzf curl-7.78.0.tar.gz
	cd curl-7.78.0
	apt-get install -y pkg-config libssl-dev zlib1g-dev libc6-dev linux-libc-dev gcc-multilib
	./configure --with-ssl=/usr --disable-ipv6
	make
	make install
	ldconfig
	cd /
	rm -rf /curl_tmp/curl-7.78.0*


	# Download and build R
	cd /opt
	wget https://cran.r-project.org/src/base/R-4/R-4.1.0.tar.gz
	tar -xvzf R-4.1.0.tar.gz
	mv R-4.1.0 R-4.1.0-src
	cd R-4.1.0-src
	./configure --with-pcre1 --prefix /opt/R-4.1.0
	make all install
	cd ..
	rm -rf R-4.1.0.tar.gz R-4.1.0-src
	
	PATH=/opt/R-4.1.0/bin:$PATH

	# Install required R packages
	R -e "install.packages('BiocManager', repos='https://cran.rstudio.com')"
	R -e "BiocManager::install('GenomicRanges', force=TRUE)"
	R -e "install.packages('circlize', repos='https://cran.rstudio.com')"
	R -e "BiocManager::install('GenomicAlignments', ask=FALSE)"
	
	# Download and build arriba
	cd /opt
	wget https://github.com/suhrig/arriba/releases/download/v2.5.1/arriba_v2.5.1.tar.gz
	tar -xzf arriba_v2.5.1.tar.gz
	rm arriba_v2.5.1.tar.gz
	cd arriba_v2.5.1 && make
	rm -rf documentation/
	rm -rf test/
	cd ..
		
	# Add shebang to draw_fusions.R using sed
    sed -i '1i#!/opt/R-4.1.0/bin/Rscript' /opt/arriba_v2.5.1/draw_fusions.R
	
	# Cleanup build dependencies
	cd /
	apt-get remove -y \
		wget \
		make \
		git \
		build-essential \
		libpcre2-dev \
		libbz2-dev \
		liblzma-dev \
		libcurl4-openssl-dev \
		libssl-dev \
		libxml2-dev \
		libx11-dev \
		libxt-dev \
		zlib1g-dev \
		libjpeg-dev \
		libpng-dev \
		libtiff-dev \
		libcairo2-dev \
		autotools-dev \
		automake \
		libtool \
		libharfbuzz-dev \
		pkg-config \
		libfribidi-dev
	apt-get autoremove -y
	apt-get clean
	rm -rf /var/lib/apt/lists/*

%environment
	export LANG=C.UTF-8
	export LC_ALL=C.UTF-8
	export PATH=/opt/arriba_v2.5.1:$PATH
	export PATH=/opt/arriba_v2.5.1/scripts:$PATH
	export PATH=/opt/R-4.1.0/bin:$PATH