Bootstrap: docker
From: ubuntu:24.04

%post
export LANG=C.UTF-8
export LC_ALL=C.UTF-8
	
# update ubuntu packages and install build dependencies
apt-get update && \
apt-get install -qq -y \
	build-essential \
	python3 \
	python3-pip \
	python3-venv \
	wget \
	build-essential \
	unzip \
	autoconf \
	automake \
	make \
	gcc \
	perl \
	zlib1g-dev \
	libbz2-dev \
	liblzma-dev \
	libcurl4-gnutls-dev \
	libssl-dev \
	libncurses5-dev \
	libdeflate-dev \
	curl

# install paraphase and dependencies
mkdir -p paraphase
cd paraphase && python3 -m venv paraphase_env
. paraphase_env/bin/activate
pip install --upgrade pip
pip install --no-cache-dir paraphase==3.3.1
deactivate

# clone and build samtools (dependency)
mkdir -p /opt
cd /opt
wget -c https://github.com/samtools/samtools/releases/download/1.20/samtools-1.20.tar.bz2
tar xjf samtools-1.20.tar.bz2
rm samtools-1.20.tar.bz2
cd samtools-1.20
./configure
make
make install
cd ..
rm -rf samtools-1.20

# install minimap2 (dependency)
cd /
wget -c https://github.com/lh3/minimap2/releases/download/v2.30/minimap2-2.30_x64-linux.tar.bz2 
tar xjf minimap2-2.30_x64-linux.tar.bz2 --no-same-owner
rm minimap2-2.30_x64-linux.tar.bz2

# cleanup build dependencies
cd /
apt-get remove -y \
	build-essential \
	python3-pip \
	python3-venv \
	python3-dev \
	wget \
	unzip \
	automake \
	make \
	zlib1g-dev \
	libbz2-dev \
	liblzma-dev \
	libssl-dev \
	libncurses5-dev \
	libdeflate-dev \
	autoconf \
	gcc \
	perl \
	curl

apt-get autoremove -y && \
apt-get clean && \
rm -rf /var/lib/apt/lists/*

%environment
export LANG=C.UTF-8
export LC_ALL=C.UTF-8
export PATH=/usr/local/bin:/minimap2-2.30_x64-linux:/paraphase/paraphase_env/bin:/bin:$PATH