Bootstrap: docker
From: ubuntu:24.04

%labels
    Maintainer KilianIlius
    Version 1.1.6
	
%post
	export LANG=C.UTF-8
	export LC_ALL=C.UTF-8
		
	# update ubuntu packages and install build dependencies
	apt-get update && \
	apt-get install -qq -y \
		build-essential \
		libssl-dev \
		libffi-dev \
		gcc
	
	# Install python 3.10
	apt-get install -y software-properties-common
	add-apt-repository -y ppa:deadsnakes/ppa
	apt-get update 
	apt-get install -y \
		python3.10 \
		python3.10-venv \
		python3.10-dev

	# Replace python3 symlinks
	# update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.10 1

	# install umi-tools
	mkdir -p /opt/umi-tools
	cd /opt/umi-tools
	python3.10 -m venv umi-tools_env
	. umi-tools_env/bin/activate
	pip install --upgrade pip
	pip install --no-cache-dir umi_tools==1.1.6
	deactivate

	# cleanup build dependencies
	cd /
	apt-get remove -y \
		build-essential \
		python3.10-venv \
		python3.10-dev \
		python3 \
		python3.12 \
		gcc \
		libssl-dev \
		libffi-dev
	apt-get autoremove -y && \
	apt-get clean && \
	rm -rf /var/lib/apt/lists/*

%environment
	export LANG=C.UTF-8
	export LC_ALL=C.UTF-8
	export PATH=/opt/umi-tools/umi-tools_env/bin:/bin:$PATH