all: chmod import_runqc copy_SomaticAndTreatment_diagnostic queue_SomaticAndTreatment_diagnostic

chmod:
	chmod -R 775 Unaligned

import_runqc:
	php /mnt/users/all/megSAP/src/NGS/runqc_parser.php -name "#00001" -run_dir Unaligned/../ -force

copy_SomaticAndTreatment_diagnostic:
	mv Unaligned/SomaticAndTreatment/Sample_DX181277_01/ /mnt/projects/diagnostic/SomaticAndTreatment/
	mv Unaligned/SomaticAndTreatment/Sample_DX181278_01/ /mnt/projects/diagnostic/SomaticAndTreatment/
	mv Unaligned/SomaticAndTreatment/Sample_DX181279_01/ /mnt/projects/diagnostic/SomaticAndTreatment/
	mv Unaligned/SomaticAndTreatment/Sample_DX181280_01/ /mnt/projects/diagnostic/SomaticAndTreatment/

queue_SomaticAndTreatment_diagnostic:
	php /mnt/users/all/megSAP/src/NGS/db_queue_analysis.php -type 'single sample' -samples DX181280_01 -args '-steps ma -no_abra -clip_overlap -correction_n'
	php /mnt/users/all/megSAP/src/NGS/db_queue_analysis.php -type 'single sample' -samples DX181277_01 -args '-steps ma -no_abra -clip_overlap -correction_n'
	php /mnt/users/all/megSAP/src/NGS/db_queue_analysis.php -type 'somatic' -samples DX181280_01 DX181277_01 -info tumor normal -args '-include_germline'
	php /mnt/users/all/megSAP/src/NGS/db_queue_analysis.php -type 'single sample' -samples DX181278_01 -args '-steps ma -no_abra -clip_overlap -correction_n'
	php /mnt/users/all/megSAP/src/NGS/db_queue_analysis.php -type 'somatic' -samples DX181278_01 DX181277_01 -info tumor normal -args '-include_germline'
	php /mnt/users/all/megSAP/src/NGS/db_queue_analysis.php -type 'single sample' -samples DX181279_01 -args '-steps ma -no_abra -clip_overlap -correction_n'
	php /mnt/users/all/megSAP/src/NGS/db_queue_analysis.php -type 'somatic' -samples DX181279_01 -info tumor -args '-include_germline'
