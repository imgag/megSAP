Bootstrap: docker
From: ubuntu:latest

%post
LANG=C.UTF-8
LC_ALL=C.UTF-8

# Update ubuntu packages and install build dependencies
apt-get update
apt-get install -y \
	wget \
	build-essential \
	make \
	unzip \
	zlib1g-dev
	
# Download and build bwa
cd /opt
wget https://github.com/lh3/bwa/archive/refs/tags/v0.7.18.tar.gz
tar xzf v0.7.18.tar.gz
rm v0.7.18.tar.gz
cd bwa-0.7.18
make

# Cleanup build dependencies
cd /
apt-get remove -y \
	wget \
	build-essential \
	make \
	unzip \
	zlib1g-dev
apt-get autoremove -y && \
apt-get clean && \
rm -rf /var/lib/apt/lists/*

%environment
export LANG=C.UTF-8
export LC_ALL=C.UTF-8
export PATH=/opt/bwa-0.7.18:$PATH