Bootstrap: docker
From: ubuntu:latest

%post
export LANG=C.UTF-8
export LC_ALL=C.UTF-8
	
# update ubuntu packages and install build dependencies
apt-get update && \
apt-get install -qq -y \
	wget \
	g++ \
	gcc \
	autoconf \
	make \
	zlib1g-dev \
	libbz2-dev \
	liblzma-dev \
	libgomp1

# install longphase
mkdir -p /opt/longphase && cd /opt/longphase
wget -c https://github.com/twolinin/longphase/archive/refs/tags/v1.7.3.tar.gz
tar xzf v1.7.3.tar.gz --no-same-owner
rm -rf v1.7.3.tar.gz
cd longphase-1.7.3 && autoreconf -i && \
./configure && \
make -j 4 && \

# cleanup build dependencies
cd /
apt-get remove -y \
 	wget \
	g++ \
	gcc \
	autoconf \
	make \
	zlib1g-dev \
	libbz2-dev \
	liblzma-dev && \
apt-get autoremove -y && \
apt-get clean && \
rm -rf /var/lib/apt/lists/*

%environment
export LANG=C.UTF-8
export LC_ALL=C.UTF-8
export PATH=/opt/longphase/longphase-1.7.3:/bin:$PATH