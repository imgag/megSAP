Bootstrap: docker
From: ubuntu:20.04

%post
LANG=C.UTF-8
LC_ALL=C.UTF-8
PATH=/bin:$PATH

# update ubuntu packages and install build dependencies
apt-get update && \
apt-get install -y \
wget \
make \
build-essential \
zlib1g-dev \
bzip2 \
libssl-dev \
libffi-dev \
libbz2-dev \
liblzma-dev \
xz-utils

# install python 3.6.9
mkdir -p Python3.6.9
wget https://www.python.org/ftp/python/3.6.9/Python-3.6.9.tgz
tar -zxvf Python-3.6.9.tgz
cd Python-3.6.9 && ./configure --prefix=/opt/Python3.6.9
make
make install
cd ..
rm -R Python-3.6.9
rm Python-3.6.9.tgz

# install spliceai
mkdir -p spliceai
cd spliceai && /opt/Python3.6.9/bin/python3 -m venv splice_env
. splice_env/bin/activate
pip install --upgrade pip
pip install spliceai==1.3.1
pip install tensorflow>=1.2.0
deactivate

# cleanup build dependencies
cd /
apt-get remove --purge -y wget bzip2 build-essential make zlib1g-dev libssl-dev libffi-dev libbz2-dev && \
apt-get autoremove -y && \
apt-get clean && \
rm -rf /var/lib/apt/lists/* 

%environment
export LANG=C.UTF-8
export LC_ALL=C.UTF-8
export PATH=/bin:/spliceai/splice_env/bin:$PATH