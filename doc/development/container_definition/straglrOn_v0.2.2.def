Bootstrap: docker
From: ubuntu:22.04

%labels
    Maintainer KilianIlius
    Version StraglrOn_v0.2.2

%post
LANG=C.UTF-8
LC_ALL=C.UTF-8

# Update package list and install Python3 and Git
apt-get update --fix-missing && apt-get install -y \
	python3 \
	python3-pip \
	python3-venv \
	git \
	build-essential

# Write requirements.txt file
echo "
asttokens==2.4.1
backcall==0.2.0
